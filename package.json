{
  "private": true,
  "name": "interop-ui",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "lint": "eslint --ext .js,.ts,.tsx .",
    "test": "cross-env ts-node --transpile-only ./scripts/test packages",
    "test:ci": "CI=true yarn test",
    "bootstrap": "make bootstrap",
    "build": "ts-node --transpile-only scripts/build-all && yarn build:styles",
    "build-package": "ts-node --transpile-only scripts/build-package",
    "build:styles": "cross-env EXTRACT_CSS=true ts-node --files ./scripts/extract-styles packages/react",
    "clean": "make clean",
    "new-component": "cross-env CI=true ts-node ./scripts/new-component",
    "nc": "yarn new-component",
    "storybook": "start-storybook -p 9009 -c ./storybook --ci",
    "docs": "yarn workspace @interop-ui/docs"
  },
  "workspaces": [
    "packages/core/*",
    "packages/primitives/*",
    "packages/react/*",
    "docs"
  ],
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:jsx-a11y/recommended"
    ],
    "plugins": [
      "jsx-a11y"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "globals": {
      "__DEV__": "readonly"
    }
  },
  "eslintIgnore": [
    "node_modules",
    "dist"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@rollup/plugin-babel": "^5.1.0",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@rollup/plugin-replace": "^2.3.3",
    "@stitches/css": "^8.0.2",
    "@stitches/styled": "^8.0.2",
    "@storybook/preset-typescript": "^3.0.0",
    "@storybook/react": "^5.3.19",
    "@testing-library/jest-dom": "^5.11.2",
    "@testing-library/react": "^10.4.7",
    "@types/babel__core": "^7.1.9",
    "@types/fs-extra": "^9.0.1",
    "@types/highlight-words-core": "^1.2.0",
    "@types/hoist-non-react-statics": "^3.3.1",
    "@types/jest": "^26.0.8",
    "@types/jest-axe": "^3.5.0",
    "@types/lodash": "^4.14.158",
    "@types/mri": "^1.1.0",
    "@types/node": "^14.0.27",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "@types/react-test-renderer": "^16.9.2",
    "@types/shelljs": "^0.8.8",
    "@types/testing-library__react": "^10.2.0",
    "@typescript-eslint/eslint-plugin": "3.x",
    "@typescript-eslint/parser": "3.x",
    "babel-eslint": "10.x",
    "babel-jest": "^26.2.2",
    "babel-loader": "^8.1.0",
    "babel-plugin-annotate-pure-calls": "^0.4.0",
    "babel-plugin-dev-expression": "^0.2.2",
    "chalk": "^4.1.0",
    "commander": "^5.1.0",
    "cross-env": "^7.0.2",
    "eslint": "6.x",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "4.x",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-react": "7.x",
    "eslint-plugin-react-hooks": "2.x",
    "fs-extra": "^9.0.1",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "jest-axe": "^3.5.0",
    "jest-watch-typeahead": "^0.6.0",
    "json-to-css": "^0.1.0",
    "lerna": "^3.22.1",
    "lerna-script": "^1.3.2",
    "lodash": "^4.17.19",
    "lodash-es": "^4.17.15",
    "mri": "^1.1.6",
    "os": "^0.1.1",
    "pascal-case": "^3.1.1",
    "prettier": "^2.0.5",
    "pretty-ms": "^7.0.0",
    "pretty-quick": "^2.0.1",
    "react-test-renderer": "^16.13.1",
    "rollup": "^2.23.0",
    "rollup-plugin-sourcemaps": "^0.6.2",
    "rollup-plugin-terser": "^6.1.0",
    "rollup-plugin-typescript2": "^0.27.1",
    "shelljs": "^0.8.4",
    "ts-jest": "^26.1.4",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "tslib": "^2.0.0"
  }
}
