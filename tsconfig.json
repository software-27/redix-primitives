{
  "include": ["packages", "types", "scripts", "docs"],
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "declaration": true,
    "emitDecoratorMetadata": false,
    "esModuleInterop": true,
    "experimentalDecorators": false,
    "importHelpers": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "pretty": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "isolatedModules": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "stripInternal": true,
    "target": "es2018",
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./types"],
    "paths": {
      "*": ["node_modules/*"],
      "@interop-ui/popper": ["./packages/core/popper/src"],
      "@interop-ui/tabbable": ["./packages/core/tabbable/src"],
      "@interop-ui/utils": ["./packages/core/utils/src"],
      "@interop-ui/react-accessible-icon": ["./packages/react/accessible-icon/src"],
      "@interop-ui/react-accordion": ["./packages/react/accordion/src"],
      "@interop-ui/react-announce": ["./packages/react/announce/src"],
      "@interop-ui/react-arrow": ["./packages/react/arrow/src"],
      "@interop-ui/react-aspect-ratio": ["./packages/react/aspect-ratio/src"],
      "@interop-ui/react-avatar": ["./packages/react/avatar/src"],
      "@interop-ui/react-checkbox": ["./packages/react/checkbox/src"],
      "@interop-ui/react-collapsible": ["./packages/react/collapsible/src"],
      "@interop-ui/react-collection": ["./packages/react/collection/src"],
      "@interop-ui/react-debug-context": ["./packages/react/debug-context/src"],
      "@interop-ui/react-dialog": ["./packages/react/dialog/src"],
      "@interop-ui/react-lock": ["./packages/react/lock/src"],
      "@interop-ui/react-lock-modular-temp": ["./packages/react/lock-modular-temp/src"],
      "@interop-ui/react-popover": ["./packages/react/popover/src"],
      "@interop-ui/react-popper": ["./packages/react/popper/src"],
      "@interop-ui/react-portal": ["./packages/react/portal/src"],
      "@interop-ui/react-progress-bar": ["./packages/react/progress-bar/src"],
      "@interop-ui/react-radio": ["./packages/react/radio/src"],
      "@interop-ui/react-separator": ["./packages/react/separator/src"],
      "@interop-ui/react-sheet": ["./packages/react/sheet/src"],
      "@interop-ui/react-slider": ["./packages/react/slider/src"],
      "@interop-ui/react-switch": ["./packages/react/switch/src"],
      "@interop-ui/react-tabs": ["./packages/react/tabs/src"],
      "@interop-ui/react-toggle-button": ["./packages/react/toggle-button/src"],
      "@interop-ui/react-tooltip": ["./packages/react/tooltip/src"],
      "@interop-ui/react-use-size": ["./packages/react/use-size/src"],
      "@interop-ui/react-utils": ["./packages/react/utils/src"],
      "@interop-ui/react-visually-hidden": ["./packages/react/visually-hidden/src"]
    }
  }
}
